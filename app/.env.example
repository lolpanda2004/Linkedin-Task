# ============================================================
# LinkedIn Data Ingestor - Environment Configuration
# ============================================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ==================== APPLICATION ====================
APP_NAME="LinkedIn Data Ingestor"
DEBUG=false
PORT=8000
LOG_LEVEL=INFO
LOG_FILE=app/logs/ingestor.log

# ==================== DIRECTORIES ====================
# Relative to project root
INCOMING_DIR=data/incoming
RAW_ZIP_DIR=data/raw_zip
OUT_ZIP_DIR=data/out_zip

# ==================== DATABASE ====================
# SQLite (default, good for single machine)
DATABASE_URL=sqlite:///./linkedin_data.db

# PostgreSQL (for production/multi-user)
# DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_db

# Database connection pool settings (PostgreSQL only)
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ==================== SCHEDULER ====================
# Enable automatic weekly ingestion
SCHEDULER_ENABLED=true

# Schedule: When to run automatic ingestion
# Valid days: mon, tue, wed, thu, fri, sat, sun
SCHEDULE_DAY_OF_WEEK=mon
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0

# Timezone for scheduler (use your local timezone)
# Examples: UTC, America/New_York, Europe/London, Asia/Kolkata
TIMEZONE=UTC

# ==================== EMAIL (GMAIL EXAMPLE) ====================
# Enable/disable email notifications
EMAIL_ENABLED=true

# Gmail SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# Your Gmail address
SMTP_USER=devanandlathika@gmail.com
