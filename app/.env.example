# ==================== PROCESSING ====================
# Delete ZIP files from incoming/ after successful processing
DELETE_INCOMING_AFTER_PROCESSING=false

# Maximum records to insert in a single database transaction
MAX_RECORDS_PER_BATCH=1000

# Enable data quality validation before insertion
ENABLE_DATA_VALIDATION=true

# ==================== RETRY LOGIC ====================
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# ==================== CORS (API) ====================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================== LINKEDIN SPECIFIC ====================
# Expected table names in LinkedIn export (for validation)
EXPECTED_TABLES=participants,conversations,messages,connections,profile,reactions