# ============================================================
# LinkedIn Data Ingestor - Environment Configuration
# ============================================================

# ==================== APPLICATION ====================
APP_NAME="LinkedIn Data Ingestor"
DEBUG=false
PORT=8000
LOG_LEVEL=INFO
LOG_FILE=app/logs/ingestor.log

# ==================== DIRECTORIES ====================
INCOMING_DIR=data/incoming
RAW_ZIP_DIR=data/raw_zip
OUT_ZIP_DIR=data/out_zip

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///./linkedin_data.db
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ==================== SCHEDULER ====================
SCHEDULER_ENABLED=true
SCHEDULE_DAY_OF_WEEK=mon
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
TIMEZONE=UTC

# ==================== EMAIL (GMAIL EXAMPLE) ====================
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USER=devanandlathika@gmail.com
FROM_EMAIL=devanandlathika@gmail.com
SMTP_PASSWORD=dawwgskabhgxrwfv
RECIPIENT_EMAILS=lolpandalath@gmail.com,devanandlathika@gmail.com

# ==================== PROCESSING ====================
DELETE_INCOMING_AFTER_PROCESSING=false
MAX_RECORDS_PER_BATCH=1000
ENABLE_DATA_VALIDATION=true

# ==================== RETRY LOGIC ====================
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# ==================== CORS (API) ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================== LINKEDIN SPECIFIC ====================
EXPECTED_TABLES=participants,conversations,messages,connections,profile,reactions